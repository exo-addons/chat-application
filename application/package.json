{
  "name": "chat",
  "version": "2.1.0",
  "description": "eXo Chat",
  "repository": {
    "type": "git",
    "url": "https://github.com/exo-addons/chat-application"
  },
  "scripts": {
    "watch": "eslint --fix ./src/main/webapp/vue-app/**/*.vue ./src/main/webapp/vue-app/*.js && webpack --config webpack.dev.js --progress --colors --watch -d",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "lint": "eslint --fix ./src/main/webapp/vue-app/**/*.vue ./src/main/webapp/vue-app/*.js",
    "build": "webpack --config webpack.prod.js --mode production"
  },
  "author": "eXo",
  "license": "LGPL",
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "babel-loader": "^8.1.0",
    "eslint": "^5.16.0",
    "eslint-config-meedsio": "^1.0.1",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-vue": "^7.9.0",
    "jest": "^22.4.4",
    "jest-fetch-mock": "^3.0.3",
    "jest-localstorage-mock": "^2.2.0",
    "jest-runner-eslint": "^0.5.0",
    "jest-vue-preprocessor": "^1.4.0",
    "vue": "^2.6.10",
    "vue-i18n": "^8.15.0",
    "vue-loader": "^14.2.3",
    "vue-template-compiler": "^2.6.10",
    "vuetify": "^2.1.7",
    "webpack": "^4.25.0",
    "webpack-cli": "^3.1.2",
    "webpack-merge": "^4.1.4"
  },
  "jest": {
    "projects": [
      {
        "displayName": "test",
        "testMatch": [
          "<rootDir>/src/test/specs/**/*.js"
        ],
        "moduleNameMapper": {
          "^vue$": "vue/dist/vue.common.js"
        },
        "moduleFileExtensions": [
          "js",
          "vue"
        ],
        "modulePaths": [
          "node_modules",
          "src"
        ],
        "transform": {
          "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
          ".*\\.(vue)$": "<rootDir>/node_modules/jest-vue-preprocessor"
        },
        "roots": [
          "src"
        ],
        "setupFiles": [
          "<rootDir>/src/test/globals.js",
          "jest-localstorage-mock",
          "jest-fetch-mock"
        ]
      },
      {
        "displayName": "lint",
        "runner": "jest-runner-eslint",
        "testMatch": [
          "<rootDir>/src/test/specs/**/*.js"
        ]
      }
    ],
    "coverageDirectory": "<rootDir>/target/jest/coverage"
  }
}
